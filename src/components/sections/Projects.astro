---
 import Section from '@/components/Section.astro'
 import { projects } from '@cv'
---

<Section title="Projects">
  <ul>
    {
      projects.map(({ name, url, description, highlights }) => {
        return (
          <li>
            <article>
              <header>
                {/* <time>{new Date(project.startDate).getFullYear()}</time> */}
                <a href={url} title={`See more about ${name}`}>{name}</a>
                <p>{description}</p>
              </header>

              <footer>
                  {
                    highlights.map((highlight) => (
                      <span>{highlight}</span>
                    ))
                  }
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: 500;
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: .75rem;
    line-height: 1.1rem;
    margin-bottom: 4px;
    
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #000;
    font-size: .6rem;
    font-weight: 500;
    padding: .2rem .6rem;
  }
</style>